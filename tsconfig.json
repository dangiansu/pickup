{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "outDir": "./",
      "moduleResolution": "node",
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests"]
  }
  